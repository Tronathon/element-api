{% import '_includes/macros' as macros %}

{% for block in entry.body.all() %}

	{% switch block.type %}

		{% case "heading" %}

			<h{{ block.hx }} id="{{ block.heading|kebab }}">{{ block.heading }}</h{{ block.hx }}>

		{% case "text" %}

			<div class="typeset">
				{{ block.text }}
			</div>

		{% case "blockquote" %}

			<blockquote>
				<p>{{ block.quote }}</p>
			</blockquote>

		{% case "image" %}

			{{ macros.img(block.image.first()) }}

	{% endswitch %}

{% endfor %}
